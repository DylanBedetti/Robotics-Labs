{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "EyeSim Build",
            "command": "C:\\Program Files (x86)\\EyeSim\\cygwin\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-Wall",
                "-leyesim",
                "-lX11",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {},
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "EyeSim Run",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "C:\\cygwin64\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-Wall",
                "-leyesim",
                "-lX11"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}